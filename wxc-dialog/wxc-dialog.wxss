.dialog {  background: #ffffff;  width: 560px;  border-radius: 8px;  background-color: #ffffff;  display: flex;  flex-flow: column nowrap;  align-items: center;  padding-top: 50px;}  .dialog__title {    font-size: 36px;    margin-bottom: 18px;    padding: 0 36px;  }  .dialog__content {    display: flex;    flex-flow: column nowrap;    align-items: center;  }    .dialog__content--image {      width: 488px;      height: 330px;      background-color: #ebebeb;      margin: 6px 36px 18px;    }    .dialog__content--text {      font-size: 30px;      padding: 0 36px 30px;      text-align: center;    }  .dialog__btns {    width: 100%;    line-height: 100px;    height: 100px;    border-top: 1px solid #e5e5e5;    display: flex;    flex-flow: row nowrap;    justify-content: center;    align-items: center;    font-size: 36px;  }    .dialog__btns--cancel {      flex: 1;      border-right: 1px solid #e5e5e5;      display: flex;      align-items: center;      justify-content: center;    }    .dialog__btns--confirm {      flex: 1;      display: flex;      align-items: center;      justify-content: center;    }